<div class="col-md-8 offset-md-2">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Videos</h3>
      <% if current_user.role_id.nil? || current_user.role_id == 2 %>
        <%= link_to new_users_video_path, class: 'btn btn-primary float-right', style: 'color:white;' do %>
              <span>Add Video</span>
        <% end %>
      <% end %>
    </div>
    <div class="card-body">
      <br>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>
              Video
            </th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% if @users_videos.present? %>
            <% @users_videos.each do |video| %>
              <tr>
                <td><%= video.video_file_name %></td>
                  <% if current_user.role_id.nil? || current_user.role_id == 2 %>
                    <td>
                        <%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  <% end %>
                  <td><%= link_to 'Download', users_video_download_video_path(user_id: current_user.id, video_id: video.id) %> </td>
              </tr>
            <% end %>
          <% else %>
          <tr>
            <td colspan="5"> No Video uploaded</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
